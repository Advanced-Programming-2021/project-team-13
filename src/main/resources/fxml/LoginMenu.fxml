<AnchorPane prefHeight="720.0" fx:id="pane" prefWidth="1280.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.allmenu.LoginView">
   <Button fx:id="loginButton" layoutX="461.0" layoutY="364.0" mnemonicParsing="false" onAction="#goToMainMenu" prefHeight="26.0" prefWidth="356.0" text="login" />
   <Button fx:id="registerButton" layoutX="602.0" layoutY="445.0" mnemonicParsing="false" onAction="#goToRegisterMenu" prefHeight="30.0" prefWidth="207.0" text="register" />
   <Button fx:id="exitButton" layoutX="601.0" layoutY="532.0" mnemonicParsing="false" onAction="#exit" text="Quit game" />
   <Label fx:id="notifLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="107.0" layoutY="246.0" prefHeight="18.0" prefWidth="386.0" />
   <Label layoutX="450.0" layoutY="444.0" text="dont have an account?" textFill="#f72500">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font>
      <effect>
         <Bloom />
      </effect>
   </Label>
   <VBox layoutX="565.0" layoutY="244.0" prefHeight="94.0" prefWidth="171.0" spacing="20.0">
      <children>
         <TextField fx:id="usernameField" promptText="username" style="-fx-border-color: white; -fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-text-fill: #ffffff;">
            <effect>
               <Bloom threshold="0.0" />
            </effect>
         </TextField>
         <PasswordField fx:id="passwordField" prefHeight="26.0" prefWidth="138.0" promptText="password" style="-fx-border-color: white; -fx-background-color: transparent; -fx-border-width: 0 0 1 0; -fx-text-fill: #ffffff;">
            <effect>
               <Bloom threshold="0.0" />
            </effect>
         </PasswordField>
      </children>
   </VBox>
</AnchorPane>
